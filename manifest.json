{
  "manifest_version": 3,
  "name": "Keyword Tabs",
  "version": "1.0",
  "description": "Open tabs based on keywords",
  "permissions": ["storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "omnibox": {
    "keyword": "-kt"
  }
}
